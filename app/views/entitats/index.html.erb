<div class="light-background-container">
  
  <div class="grid-container">
    <div class="grid-x grid-margin-x">
      <div class="medium-12 cell">
        <div class="titol-seccio">
          <%= t('.titol') %>
        </div>
      </div>
    </div>
        
    <div class="grid-x grid-margin-x">
      <div class="medium-12 cell">
        <div class="light-container">
          <h4 class="titol-seccio"><%= t('.edifici_sencer') %></h4>
          <%= link_to(t('.dades_edifici'), edit_identificacio_path(params[:edifici_id]), :class => 'link-item-edifici') %>
          <div class="divider"></div>
          <div class="spacer"></div>
          <h4 class="titol-seccio"><%= t('.entitats') %></h4>
          <table>
            <thead>
              <tr>
                <th>Nom</th>
                <th>Destinació</th>
                <th>Superfície</th>
                <th>Quota</th>
                <th>Propietat</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @entitats.each do |entitat| %>
                <tr>
                  <td><%= link_to entitat.nom, edit_edifici_entitat_path(id: entitat.id) %></td>
                  <td><%= entitat.destinacio %></td>
                  <td><%= entitat.superficie %></td>
                  <td><%= entitat.quota %></td>
                  <td><%= entitat.nom_propietari %> <%= entitat.cognoms_propietari %></td>
                  <td>
                    <%= link_to edifici_entitat_path(id: entitat.id), method: :delete, data: { confirm: t('.eliminar') } do %>
                      <i class="fa fa-trash" aria-hidden="true"></i>                 
                    <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to t('.nova_entitat'), new_edifici_entitat_path %>
          
        </div>
      </div>
    </div>
  </div>
</div>

