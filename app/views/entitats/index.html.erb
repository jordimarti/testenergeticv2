<h1>Entitats</h1>

<table>
  <thead>
    <tr>
      <th>Edifici</th>
      <th>Nom</th>
      <th>Descripcio</th>
      <th>Superficie</th>
      <th>Destinacio</th>
      <th>Quota</th>
      <th>Nom propietari</th>
      <th>Cognoms propietari</th>
      <th>Email propietari</th>
      <th>Telefon propietari</th>
      <th>Adreca propietari</th>
      <th>Codi postal propietari</th>
      <th>Municipi propietari</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entitats.each do |entitat| %>
      <tr>
        <td><%= entitat.edifici_id %></td>
        <td><%= entitat.nom %></td>
        <td><%= entitat.descripcio %></td>
        <td><%= entitat.superficie %></td>
        <td><%= entitat.destinacio %></td>
        <td><%= entitat.quota %></td>
        <td><%= entitat.nom_propietari %></td>
        <td><%= entitat.cognoms_propietari %></td>
        <td><%= entitat.email_propietari %></td>
        <td><%= entitat.telefon_propietari %></td>
        <td><%= entitat.adreca_propietari %></td>
        <td><%= entitat.codi_postal_propietari %></td>
        <td><%= entitat.municipi_propietari %></td>
        <td><%= link_to 'Show', entitat %></td>
        <td><%= link_to 'Edit', edit_entitat_path(entitat) %></td>
        <td><%= link_to 'Destroy', entitat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

