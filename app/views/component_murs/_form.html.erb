
<%= simple_form_for(@component_mur, remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :mur_id, as: :hidden, input_html: { value: params[:mur_id] } %>
    <%= f.input :nom %>
    <%= f.input :conductivitat %>
    <%= f.input :gruix %>
    <%= f.input :resistencia_termica %>
    <%= f.input :color, collection: [[t('.blanc'), '#FFFFFF'], [t('.taronja'), '#EF915F'], [t('.gris'), '#CCCCCC'], [t('.groc'), '#FDE739'], [t('.blau'), '#5FD3EF']] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
